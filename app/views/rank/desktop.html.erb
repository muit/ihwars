<div class="ranking_table row padding-top margin-top">
    <% @ranks.each_with_index do |an_user_rank, index| %>
      <div class="ranking_row column_8 offset_2 bck grey margin-bottom padding-top padding-bottom">
        <h5 class="inline text bold color theme margin-left"><%= index + 1 %>. <%= link_to(an_user_rank.user.name, user_profile_path(an_user_rank.user)) %></h5>
        <% if an_user_rank.user.admin %>
        	<span class='tag bck red'>ADMIN</span>
        <% end %>
        <h6 class="inline text bold right color dark on-right padding-right"><%= an_user_rank.total_level %></h6>
      </div>
    <% end %>
</div>

